{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
        "/*": ["src/*"],
      }
    },
    "include": [
      "src",
      "next-env.d.ts",
    ],
    "exclude": [
      "node_modules",
      ".build"
    ]
  }
